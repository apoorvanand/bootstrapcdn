{
  "name": "bootstrapcdn",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./node_modules/",
    "puglint": "pug-lint views/",
    "xo": "xo --quiet",
    "lint": "npm run xo && npm run puglint",
    "mocha": "mocha --invert --grep \"functional\"",
    "mocha:suite": "mocha",
    "mocha:functional": "mocha ./test/functional_test.js",
    "dev": "nodemon app.js --ext css,js,pug,svg,png,yml --ignore test",
    "start": "cross-env NODE_ENV=production forever start --plain app.js",
    "stop": "forever stop app.js",
    "restart": "npm run stop & npm run start",
    "ci": "npm run lint && npm run mocha:suite",
    "test": "npm run lint && npm run mocha",
    "purge-latest": "bash ./scripts/purge.sh",
    "bootswatch": "node ./scripts/bootswatch.js",
    "integrity": "node ./scripts/integrity.js",
    "sri": "node ./scripts/sri.js",
    "wp-plugin": "node ./scripts/wp-plugin.js"
  },
  "engines": {
    "node": "8.x"
  },
  "dependencies": {
    "compression": "^1.7.2",
    "cross-env": "^5.1.4",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-sitemap": "^1.8.0",
    "express-sslify": "^1.2.0",
    "forever": "^0.15.3",
    "helmet": "^3.12.0",
    "js-yaml": "^3.11.0",
    "jstransformer-clean-css": "^2.1.0",
    "morgan": "^1.9.0",
    "pug": "^2.0.3",
    "rollbar": "^2.3.9",
    "semver": "^5.5.0",
    "serve-favicon": "^2.5.0",
    "serve-static": "^1.13.2",
    "sri-toolbox": "^0.2.0",
    "staticify": "^2.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "fs-walk": "^0.0.2",
    "html-validator": "^2.2.3",
    "htmlencode": "^0.0.4",
    "mocha": "^5.1.0",
    "nodemon": "^1.17.3",
    "pug-lint": "^2.5.0",
    "pug-lint-config-clock": "^2.0.0",
    "request": "^2.85.0",
    "uglify-js": "^3.3.21",
    "xo": "^0.20.3"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "capitalized-comments": "off",
      "global-require": "error",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "app.js"
          ]
        }
      ],
      "indent": [
        "error",
        4,
        {
          "MemberExpression": "off",
          "SwitchCase": 1
        }
      ],
      "init-declarations": [
        "error",
        "always"
      ],
      "new-cap": "off",
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": true,
          "exceptions": {
            "Property": true,
            "VariableDeclarator": true
          }
        }
      ],
      "no-undefined": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-destructuring": "off",
      "quote-props": [
        "error",
        "consistent"
      ],
      "unicorn/filename-case": "off",
      "unicorn/no-process-exit": "off"
    },
    "overrides": [
      {
        "files": "public/assets/js/main.js",
        "esnext": false,
        "envs": [
          "browser"
        ],
        "rules": {
          "unicorn/no-abusive-eslint-disable": "off"
        }
      },
      {
        "files": "test/*.js",
        "envs": [
          "mocha"
        ]
      }
    ]
  }
}
